<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{ _id }}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <br>
                    <p>{{description}}</p>
                    <br>
                    <div class="d-grid gap-2">
                        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block mb-3" type="submit">Eliminar</button>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    {{else}}
    <!--cuando no haya notas pues manda esta vista-->
        <div class="card mx-auto">
            <div class="card-body d-grid gap-2">
                <h1 class="mx-auto">¡Hola {{user.name}}!</h1> <!--recuerda que viene desde la variable user de index-->
                <p class="lead mx-auto">No hay notas aún</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crear una</a>
            </div>
        </div>
    {{/each}}
</div>