{{#if error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ error }} <!--muestra el valor de la llave texto del array errors porque accedemos a cada una de sus propiedades-->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

{{#each errors }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        {{ text }} <!--muestra el valor de la llave texto del array errors porque accedemos a cada una de sus propiedades-->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/each}}